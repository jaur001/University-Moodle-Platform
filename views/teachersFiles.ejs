<body>
    <h1>
        List of Students and his/her marks
    </h1>
    <form action="/change" method="POST">
        <input type="text" placeholder="Username" name="Username">
        <input type="text" placeholder="Rating" name="Rating">
        <button type="submit">Change grade</button>
    </form>
    <form action="/logout" method="POST">
        <button class="leftsided" type="submit">Log out</button>
    </form>
	<table>
        <tr>
            <th>Username</th>
            <th>History</th>
            <th>Maths</th>
            <th>Informatics</th>
            <th>English</th>
        </tr>
            <% for(var i=0; i<users.length; i++) {%>
                <tr>
                    <div class="user">
                        <td><%= users[i].Username %></td>
                        <td><%= users[i].History %></td>
                        <td><%= users[i].Maths %></td>
                        <td><%= users[i].Informatics %></td>
                        <td><%= users[i].English %></td>
                    </div>
                </tr>
            <% } %>
    </table>
